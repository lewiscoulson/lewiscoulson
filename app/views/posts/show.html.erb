<h1 class="post">
  <%= @post.title %>
</h1>

<div class="date">
  Created: <%= time_ago_in_words(@post.created_at) %> ago
</div>

<div class="body">
  <%= @post.body %>
</div>

<% if user_signed_in? %>
  <%= link_to('Edit', edit_post_path) %>
  <%= link_to('Delete', post_path(@post), method: :delete, data: {confirm: 'are you sure?'}) %>
<% end %>